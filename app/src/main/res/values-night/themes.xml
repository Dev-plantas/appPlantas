<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.App_plantas_kt" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green_plant_lite</item>
        <item name="colorPrimaryVariant">@color/green_plant</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green_plant_lite</item>
        <item name="colorSecondaryVariant">@color/green_plant</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="BACKGROUND" >
        <item name="android:background">@color/gray_dark</item>
    </style>
    <style name="TEXTCOLOR">
        <item name="android:textColor">@color/white</item>
    </style>
</resources>